{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}